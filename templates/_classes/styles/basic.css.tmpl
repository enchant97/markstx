body {
    font-family: sans-serif;
}
h1, h2, h4, h5, h6 {
    font-family: serif;
}
h2, h3, h4, h5, h6 {
    font-style: italic;
    font-size: 1rem;
}
h3, h4, h5, h6 {
    margin: 1rem 0;
    font-weight: normal;
}
h1 {
    font-size: 3.5rem;
    font-weight: bold;
    margin: 2rem 0;
}
h2 {
    page-break-before: always;
    break-before: page;
    font-weight: bold;
    font-size: 2.4rem;
    margin: 1.4rem 0;
}
h3 {
    font-size: 1.4rem;
}
p {
    text-align: justify;
}
