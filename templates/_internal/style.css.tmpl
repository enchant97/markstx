@page {

{% with s = frontmatter.page.size %}
{%- if "name" in s -%}
    size: {{ s.name }} {{ s.orientation }};
{%- else -%}
    size: {{ s.width }} {{ s.height }};
{%- endif -%}
{%- endwith -%}

{% with m = frontmatter.page.margin %}
    margin: {{ m.top }} {{ m.right }} {{ m.bottom }} {{ m.left }};
{%- endwith -%}

}

img {
    width: 100%;
    height: auto;
}

h2 {
  page-break-before: always;
  break-before: page;
}

@page blank {
  @bottom-center {
    content: none;
  }

  @top-left {
    content: none;
  }

  @top-right {
    content: none;
  }
}
